# Typefully API
TYPEFULLY_API_KEY=your_typefully_api_key_here
TYPEFULLY_ACCOUNT_ID=your_account_id

# Twitter API v2 (for monitoring influencers)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# RapidAPI Twitter API45 (for brand learning - more cost effective)
# Get your key from: https://rapidapi.com/alexanderxbx/api/twitter-api45
RAPIDAPI_KEY=your_rapidapi_key

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI (for DALL-E 3 image generation)
OPENAI_API_KEY=your_openai_api_key

# Linear
LINEAR_API_KEY=your_linear_api_key
LINEAR_TEAM_ID=your_team_id

# GitHub
GITHUB_TOKEN=your_github_token
GITHUB_ORG=randomblocker
GITHUB_REPO=demosdk

# Demos Network
DEMOS_RPC_URL=https://demosnode.discus.sh/
DEMOS_DEV_URL=https://dev.node2.demos.sh/

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/demos_marketing

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Content Generation Settings
MAX_DRAFTS_PER_DAY=10
MIN_RELEVANCE_SCORE=0.6
PIPELINE_INTERVAL_HOURS=4

# Monitoring
MONITOR_CRYPTO_INFLUENCERS=true
MONITOR_REDDIT=true
MONITOR_NEWS_FEEDS=true

# Visual Generation
ENABLE_VISUAL_GENERATION=true
ENABLE_BRAND_REVIEW=true

# Brand Voice Learning
ENABLE_BRAND_LEARNING=true
BRAND_PROFILE_UPDATE_HOURS=168
BRAND_LEARN_FROM_PARAGRAPH=true
